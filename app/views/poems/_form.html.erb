<%= form_for ([@author, @author.poems.build]) do |f| %>
    <%=f.label :title %><br>
    <%=f.text_field :title %>
    <br>
    <%=f.label :content %><br>
    <%=f.text_area :content %>
    <br>
    <%=f.label :methaphor %><br>
    <%=f.text_area :methaphor %>
    <br>
    <%=f.label :publish_date %><br>
    <%=f.date_field :publish_date %>
    <br>
    <%= f.submit (@poem.new_record? ? "Create" : "Update") %>
<% end %>
