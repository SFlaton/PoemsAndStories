<%= form_for ([@author, @author.short_stories.build]) do |f| %>
    <%=f.label :title %><br>
    <%=f.text_field :title %>
    <br>
    <%=f.label :content %><br>
    <%=f.text_area :content %>
    <br>
    <%=f.label :description %><br>
    <%=f.text_area :description %>
    <br>
    <%=f.label :publish_date %><br>
    <%=f.date_field :publish_date %>
    <br>
    <%= f.submit (@short_story.new_record? ? "Create" : "Update") %>
<% end %>
